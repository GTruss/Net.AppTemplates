{
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "Properties": {
      "ApplicationName": ".Net 6 Web MVC"
    },
    "ColumnOptions": {
      "addStandardColumns": [ "TimeStamp", "Level", "Message", "Exception", "LogEvent" ],
      "removeStandardColumns": [ "MessageTemplate", "Properties" ],
      "additionalColumns": [
        {
          "ColumnName": "EventType",
          "PropertyName": "EventType",
          "DataType": "varchar",
          "DataLength": 10
        }
      ],
      "timeStamp": {
        "columnName": "Timestamp",
        "convertToUtc": false
      }
    },
    "SchemaName": "dbo",
    "TableName": "Log"
  }
}
